<h3><%= @group.name %></h3>
<p><%= @group.description %></p>
<p>Created by @<%= @group.creator %></p>

<div id="groupshow">
    <p>Loading queue...</p>
</div>

<%= if @group_id do %>
<script>
    window.group_id = "<%= @group_id %>"
</script>
<% end %>

<%= if @group.creator.id == @group.listener.id do %>
    <span><%= link "Edit", to: group_path(@conn, :edit, @group) %></span>
    <span><%= link "Back", to: group_path(@conn, :index) %></span>
<% end %>
