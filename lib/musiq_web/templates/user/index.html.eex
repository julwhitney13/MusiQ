<h2>Listing Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>Spotify</th>
      <th>Username</th>
      <th>Email</th>
      <th>Admin?</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.spotify_id %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? %></td>

      <td class="text-right">
        <span><%= link "Show", to: user_path(@conn, :show, user), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: user_path(@conn, :edit, user), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New User", to: user_path(@conn, :new) %></span>
